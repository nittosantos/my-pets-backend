generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid()) // UUID como ID
  name      String
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
  pets      Pet[]
}

model Pet {
  id        String   @id @default(uuid())
  name      String
  type      String
  breed     String?
  age       Int?
  createdAt DateTime @default(now())
  userId    String
  user      User     @relation(fields: [userId], references: [id])

  @@index([userId])
}
